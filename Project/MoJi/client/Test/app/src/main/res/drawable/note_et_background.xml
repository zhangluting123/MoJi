<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 内容填充颜色-->
            <solid android:color="#80efefef"/>
            <!-- 设置圆角-->
            <corners android:radius="3dp" />
            <!-- 设置边框宽度，颜色值-->
            <stroke
                android:width="0.5px"
                android:color="#505050"/>
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"/>

        </shape>
    </item>
</layer-list>