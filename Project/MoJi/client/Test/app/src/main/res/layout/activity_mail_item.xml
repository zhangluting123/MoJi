<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mailItem_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:navigationIcon="@mipmap/back"
        android:background="@color/MyTheam_color">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnDelete"
                android:textSize="18sp"
                android:text="删除"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="#00000000"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_margin="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/mail"/>
        <RelativeLayout
            android:padding="30dp"
            android:layout_width="300dp"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="#22cdcdcd">
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:text="嗨！" />
                <TextView
                    android:id="@+id/tv_myName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MyTheam_color"
                    android:text="zhangsan"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_middle"
                android:layout_below="@id/ll_top"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_otherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MyTheam_color"
                    android:text="lisi" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text=" 评论你la~~~  " />
            </LinearLayout>
            <ScrollView
                android:id="@+id/ll_bottom"
                android:layout_below="@id/ll_middle"
                android:layout_width="match_parent"
                android:layout_height="190dp">
                <TextView
                    android:id="@+id/tv_commentContent"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="嘻嘻嘻嘻嘻嘻" />
            </ScrollView>
            <TextView
                android:id="@+id/tv_commentTime"
                android:layout_below="@id/ll_bottom"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019/12/12"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>