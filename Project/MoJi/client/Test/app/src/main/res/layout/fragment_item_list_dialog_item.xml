<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/commentAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:id="@+id/commentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/commentAvatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="licb"/>
    <TextView
        android:id="@+id/commentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentUserName"
        android:layout_toRightOf="@id/commentAvatar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="这是评论"
        android:textSize="14dp"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/commentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="10dp"
        android:textColor="@color/colorCommentTimeText"
        android:text="2017-10-11 24:03:04"
        android:layout_below="@id/commentContent"
        android:layout_alignParentRight="true"/>
</RelativeLayout>