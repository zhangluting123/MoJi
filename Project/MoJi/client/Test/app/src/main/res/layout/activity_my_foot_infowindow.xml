<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:background="#2B9685"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="13dp"
        />
    <TextView
        android:id="@+id/text_item_latlng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#5AB137"
        android:gravity="center_horizontal"
        android:textSize="13dp"
        />
    <TextView
        android:id="@+id/ed_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#58C7F9"
        android:gravity="center_horizontal"
        android:textSize="13dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_see"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#BABA66"
            android:textSize="17dp"
            android:text="查看"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#BABAFF"
            android:textSize="17dp"
            android:layout_weight="1"
            android:text="取消"
            />
    </LinearLayout>
</LinearLayout>