<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号注册"
            android:textSize="26sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvText"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/tvTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号:"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/edtTel"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tvTel"/>

            <TextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码:"
                android:textSize="20sp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvTel"/>

            <EditText
                android:id="@+id/edtCode"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tvCode"
                android:layout_below="@+id/edtTel"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnCode"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/edtCode"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_login_shape"/>

            <TextView
                android:id="@+id/tvPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密    码:"
                android:textSize="20sp"
                android:layout_below="@+id/tvCode"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/edtPwd"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tvPwd"
                android:layout_marginTop="140dp"/>

            <TextView
                android:id="@+id/tvPwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码:"
                android:textSize="20sp"
                android:layout_below="@+id/tvPwd"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/edtPwd2"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tvPwd2"
                android:layout_marginTop="210dp"/>

            <Button
                android:id="@+id/btnReg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="注册"
                android:textSize="19sp"
                android:layout_below="@+id/tvPwd2"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_login_shape"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>